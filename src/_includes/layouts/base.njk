<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>{{ title }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://assets.uits.iu.edu/css/rivet/latest/rivet.min.css">
  <link rel="stylesheet" href="./css/rivet-next-components.css">
</head>
<body>
  <header>
    {% include "components/header/global-header.njk" %}
    {% if sectionPage %}
    {% include "components/header/local-header.njk" %}
    {% endif %}
  </header>
  <main id="main-content">
    <div class="rvt-container rvt-container--center rvt-container--junior rvt-m-top-xxl">
      <div class="rvt-grid">
        <div class="rvt-grid__item-8-md-up rvt-grid__item-push-4-md rvt-m-bottom-xxl">
          <h1 class="rvt-text-bold rvt-ts-32 rvt-lh-title">Contents</h1>
          <ul>
            <li>
              <a href="./">Top-level global navigation example</a>
            </li>
            <li>
              <a href="./local-property.html">Local property navigation example</a>
            </li>
          </ul>
        </div>
        <div class="rvt-grid__item-3-md-up rvt-grid__item-pull-8-md">
          <h2 class="rvt-hide-md-up rvt-m-bottom-lg">
            <span class="rvt-display-block rvt-text-uppercase rvt-ts-12">More in</span>
            <span class="rvt-display-block rvt-ts-16 rvt-text-bold">Local property title</span>
          </h2>
          {% include "components/sidenav.njk" %}
        </div>
      </div>
    </div>
    {{ layoutContent | safe }}
  </main>
  <footer>
    {% include "components/footer/footer.njk" %}
  </footer>
  <script src="https://assets.uits.iu.edu/javascript/rivet/latest/rivet.min.js"></script>
  <script src="./js/rivet-next-components.js"></script>
  <script>
    // Initialize Additional Javascript components
    RivetNext.toggle.init();
    RivetNext.sidenav.init();
    
    // Testing toggle show/hide custom events
    document.addEventListener('rvt:toggleHide', function(event) {
      // Change to true to test event canceling
      var preventEvent = false;
      if (!preventEvent) {
        console.log(event.detail.elementId)
      } else {
        event.preventDefault();
        console.log('nope, cancelled')
      }
    });
  </script>
</body>
</html>